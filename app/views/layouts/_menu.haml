.navbar.navbar-default.navbar-fixed-top{ role: 'navigation' }
  .navbar-container
    .container
      .navbar-header
        = link_to 'Events app', root_path, class: 'navbar-brand'
        = link_to '#', class: 'navbar-toggle', data: { toggle: 'collapse', target: '.navbar-collapse' } do
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      .navbar-collapse.collapse
        - if user_signed_in?
          %ul.nav.navbar-nav
            %li= link_to 'Events', events_path
            %li= link_to 'New event', new_event_path
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              = link_to current_user.email, '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }
              %ul.dropdown-menu
                %li= link_to 'Sign out', destroy_user_session_path, method: :delete
        - else
          %ul.nav.navbar-nav.navbar-right
            %li= link_to 'Sign up', new_user_registration_path
            %li= link_to 'Sign in', new_user_session_path
